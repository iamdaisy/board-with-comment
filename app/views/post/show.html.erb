<h1><%= @post.id %>번째 글 보기</h1>


<p>제목: <%= @post.title %></p>
<p>내용: <%= @post.content %></p>


<%= form_tag("/post/create_comment/#{@post.id}", method: 'post') do %>
    <%= label_tag(:content, "댓글") %>
    <%= text_field_tag(:content) %>

    <%= submit_tag("작성") %>
<% end %>


<% @post.comments.each do |c| %>
<p><%= c.content %></p>
<% end %>

