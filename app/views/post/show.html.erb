<h1><%= @post.id %>번째 글 보기</h1>


<p>제목: <%= @post.title %></p>
<p>내용: <%= @post.content %></p>

<form action='/post/create_comment/<%= @post.id %>' method="post">
    댓글입력 <input type="text" name="comment">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit">
    
</form>


<%= form_tag("/post/create_comment/#{@post.id}", method: 'post') do %>
    <% label_tag(:comment, "댓글") %>
    <% text_field_tag(:comment) %>

    <% submit_tag("입력") %>
<% end %>


<% @post.comments.each do |c| %>
<p><%= c.content %></p>
<% end %>

