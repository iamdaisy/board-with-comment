<p></p>

<div class="container">
    <div class="row">
        <div class="col">
            <h1> 게시글 목록 </h1>
        </div>
        
        <div class="col text-right">
            <a href="/post/new" class="btn btn-outline-primary">글쓰기</a>
        </div>
    </div>
</div>

      <table class="table">
        <thead class="thead-default">
          <tr>
            <th>번호</th>
            <th>제목</th>
            <th>글쓴이</th>
            <th>작성일</th>
          </tr>
        </thead>
        <tbody>
        <% @posts.each do |post|%>
          <tr>
            <th scope="row"><%= post.id %></th>
            <td><a href="/post/show/<%=post.id%>"><%= post.title %></a></td>
            <td><%= post.user.email %></td>
            <td><%= time_ago_in_words(post.user.created_at) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>    
        
  </div>
</div>
